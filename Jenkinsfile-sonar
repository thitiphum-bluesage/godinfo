pipeline {
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    stages {
        stage('SonarQube Scan Service1') {
            steps {
                dir('service1') {
                    withSonarQubeEnv('sq1') {
                        sh "sonar-scanner" // Directly run SonarQube scanner
                    }
                }
            }
        }
        stage('SonarQube Scan Service2') {
            steps {
                dir('service2') {
                    withSonarQubeEnv('sq1') {
                        sh "sonar-scanner"
                    }
                }
            }
        }
        stage('SonarQube Scan Frontend') {
            steps {
                dir('frontend') {
                    withSonarQubeEnv('sq1') {
                        sh "sonar-scanner"
                    }
                }
            }
        }
    }
}
